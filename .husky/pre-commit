#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Type checking
echo "📝 Checking TypeScript types..."
npm run type-check

# Linting
echo "🧹 Running ESLint..."
npm run lint

# Build test
echo "🏗️ Testing build..."
npm run build

echo "✅ All checks passed!"
